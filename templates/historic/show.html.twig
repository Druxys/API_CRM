{% extends 'base.html.twig' %}

{% block title %}Historic{% endblock %}

{% block body %}
    <h1>Historic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ historic.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ historic.type ? historic.type|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ historic.contact }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ historic.createdAt ? historic.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ historic.updatedAt ? historic.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('historic_index') }}">back to list</a>

    <a href="{{ path('historic_edit', {'id': historic.id}) }}">edit</a>

    {{ include('historic/_delete_form.html.twig') }}
{% endblock %}
